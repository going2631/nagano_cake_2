<main>
  <div class= "container">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12 px-5 px-sm-0 mx-auto">
        <h1>配送先編集</h1>
            <%= form_with model: @address, url: address_path,  method: :patch, local:true do |f| %>
                <div class="form-group">  
                  <label for="item_image">郵便番号（ハイフンなし）</label>
                    <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"PostalCode"%>
                </div>
                <div class="form-group">  
                  <label for="item_image">住所</label>
                    <%= f.text_area :address, autofocus: true, id:"inputName", placeholder:"Address"%>
                </div>
                <div class="form-group">  
                  <label for="item_image">宛名</label>
                    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
                    <%= f.submit '変更内容を保存' %>
                </div>
            <% end %>
      </div>
    </div>       
  </div>        
</main>