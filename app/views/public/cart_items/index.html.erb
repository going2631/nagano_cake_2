<main>
  <div class= "container">
    <div class="row">
      <div class="col-lg-10">

        <h1>ショッピングカート</h1>

        <%= link_to "ショッピングカートを空にする", destroy_all_path , method: :delete %>
        <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          <tr>
        <thead>
        <tbody>                  
        <% @cart_items.each do |cart_item|%>
          <tr>
            <th><%= cart_item.item.name %></th>
            <th><%= cart_item.item.price*1.1%></th>
              <%= form_with model: cart_item , local:true do |f| %>
                  <th><%= f.number_field :amount %></th>
                  <th><%= f.submit %></th>
              <%end%>
            <th><%= cart_item.item.price*cart_item.amount*1.1%></th>
            <th><%= link_to "削除する",cart_item_path(cart_item) ,method: :delete %></th>
          </tr>
        <% end %>
        </tbody>
        </table>

 
         <%= link_to "買い物を続ける" , "/"%>
         <%= link_to "情報入力に進む", new_order_path%>
      </div>       
    </div>
  </div>
</main>