<main>
  <div class= "container">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12 px-5 px-sm-0 mx-auto">

        <h1>会員情報編集</h1>
        <table class="table">
        <%= form_with model: @customer,url: customer_path, method: :patch, local:true do |f| %>
        <tr>
          <div class="form-group">  
            <th><label for="customer_name">氏名</label></th>
              <th>
                <%= f.text_field :last_name, autofocus: true, id:"inputLastName", placeholder:"LastName" %>
                <%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"FirstName" %>
              </th>
          </div>
        </tr>
        <tr>
          <div class="form-group">  
            <th><label for="customer_name_kana">フリガナ</label></th>
             <th>
               <%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana", placeholder:"LastNameKana" %>
               <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder:"FirstNameKana" %>
             </th>
          </div>
        </tr>
        <tr>
          <div class="form-group">  
            <th><label for="customer_postal_code">郵便番号</label></th>
              <th><%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"PostalCode" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">  
            <th><label for="customer_address">住所</label></th>
              <th><%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"address" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">  
            <th><label for="customer_telephone_number">電話番号</label></th>
              <th><%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder:"TelephoneNumber" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">  
            <th><label for="customer_email">メールアドレス</label></th>
              <th><%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"email" %></th>
          </div>
        </tr>
        <tr>
          <th><%= f.submit '編集内容を保存' %></th>
        </tr>
        <% end %>
        </table>
        <%= link_to "退会する", unsubscribe_path %>
      </div>
    </div>       
  </div>        
</main>