<main>
  <div class= "container px-5 px-sm-0">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= "#{@customer.last_name+@customer.first_name}さんの会員詳細"%>
        
        <div class="form-group">  
           <label for="customer_id">会員ID</label>
             <%=@customer.id %>
        </div>
        <div class="form-group">  
           <label for="customer_name">氏名</label>        
             <%=@customer.first_name+@customer.last_name %>
        </div>
        <div class="form-group">  
           <label for="customer_id_kana">フリガナ</label>        
             <%=@customer.first_name_kana+@customer.last_name_kana %>
        </div>
        <div class="form-group">  
           <label for="customer_postal_code">郵便番号</label>        
             <%=@customer.postal_code %>
        </div>
        <div class="form-group">  
           <label for="customer_address">住所</label>        
             <%=@customer.address %>
        </div>
        <div class="form-group">  
           <label for="container_telephone_number">電話番号</label>        
             <%=@customer.telephone_number %>
        </div>        
        <div class="form-group">  
           <label for="customer_emai">メールアドレス</label>        
             <%=@customer.email %>
        </div>        
        <div class="form-group">  
           <label for="customer_is_deleted">会員ステータス</label>        
             <%=@customer.is_deleted%>
        </div>
        
            <%= link_to "編集する",  edit_admin_customer_path(@customer.id) %>
            <%= link_to "注文履歴一覧を見る",admin_root_path(is_customer: true, customer_id:@customer.id) %>

      </div>
    </div>         
  </div>
</main>    