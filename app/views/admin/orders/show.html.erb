<h1>注文履歴詳細</h1>
<h4>購入者</h4>
    <%= @order.last_name+@order.first_name%>

<h4>注文日</h4>
    <%= @order.created_at.strftime('%Y/%m/%d') %>

<h4>配送先</h4>
    <%= @order.postal_code+@order.address%>
    <%= @order.name%>

<h4>支払方法</h4>
    <%= @order.payment_method%>

<h4>注文ステータス</h4>
    <%= form_with model: @order, url: admin_order_path, method: :patch, local:true do |f|  %>
    
        <%= f.select :stutas, [["入金待ち", 0], ["入金確認", 1], ["発送準備", 2], ["発送済み", 3]], include_blank: "選択して下さい" %>
       
        <%= f.submit '変更を保存' %>
        
    <% end %>
  　
  　<% @order_details.each do |order_detail|%>
  　
  　<%= order_detail.item.name%>
  　<%= order_detail.item.price * 1.1%>
  　<%= order_detail.amount%>
  　<%= order_detail.item.price * order_detail.amount* 1.1 %>
  　
  　
  　     <%= form_with model: @order_detail, url: admin_order_path, method: :patch, local:true do |f|  %>
        
            <%= f.select :making_status, [["製作不可", 0], ["製作待ち", 1], ["製作中", 2], ["製作完了", 3]], include_blank: "選択して下さい" %>
       
            <%= f.submit '変更を保存' %>
        
        <% end %>
    <% end %>
    
  