<main>
  <div class= "container px-5 px-sm-0">
     <div class="col-md-8 offset-md-1">
       <h3>商品一覧</h3>
       <%= link_to "新規登録",new_admin_item_path %>
         <div class=row>
           <table class="table table-hover table-inverse">
             <thead>
               <tr>
                 <th>商品ID</th>
                 <th>商品名</th>
                 <th>税抜価格</th>
                 <th>ジャンル</th>
                 <th>ステータス</th>
                 <th colspan="５"></th>
               </tr>
             </thead>
             <tbody>
               <% @items.each do |item|%>
                 <tr>
                  <td><%= item.id%></td>
                  <td><%= link_to "#{item.name}", admin_item_path(item.id)%></td>
                  <td><%= item.price%></td>
                  <td><%= item.genre_id%></td>
                  <td>
                    <% if item.is_active == true %>
                    　販売中
                    <%else%>
                    　販売停止中
                    <%end%>
                  </td>
                 </tr>
               <% end %>
             </tbody> 
           </table>
           <%= paginate @items %>
      </div>
    </div>         
  </div>
</main>