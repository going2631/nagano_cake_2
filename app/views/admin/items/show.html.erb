<main>
  <div class= "container">
    <div class="row">
　　　<h1>商品詳細</h1>
　　</div>
　　<div class="row">
　　　<div class="col-sm-6 col-md-6 col-lg-6 ">
　　　　<%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
　　　</div>
　　  <div class="col-sm-3 col-md-3 col-lg-3">
        <p>商品名：<%= @item.name %></p>
        <p>商品説明：<%= @item.introduction %></p>
        <p> ジャンル：<%= @item.genre.name %></p>
        <p>税込価格：<%= @item.price %></p>
        <p>
           <% if @item.is_active == true%>
             販売ステータス：<%= "販売中" %>
           <% else %>
             販売ステータス：<%= "販売停止" %>
           <%end%>
          
        </p>
        <%= link_to "編集する", edit_admin_item_path(@item.id)%>
      </div>
    </div>
  </div>
