<h1>商品編集</h1>


    <%= form_with model: @item, url: admin_items_path,  method: :PATC, local:true do |f| %>
        <h4>商品画像</h4>
          <%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %>
        <h4>商品名</h4> 
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
        <h4>商品説明</h4>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>  
        <h4>ジャンル</h4>
         
          <%= f.collection_select :genre_id, Genre.all, :name, include_blank: "選択して下さい" %>
        <h4>税抜価格</h4>
        　<%= f.text_field:price, placeholder:"1000" %>
         
       <h4>販売ステータス</h4>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", { style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false%>
          <%= f.label :is_active, "販売停止中", { style: "display: inline-block;"} %>
       
          <%= f.submit '変更を保存' %>
        <% end %>