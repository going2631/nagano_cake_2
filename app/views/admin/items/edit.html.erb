<main>
  <div class= "container">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12 px-12 px-sm-0 mx-auto">
        <h1>商品編集</h1>
          <%= form_with model: @item, url: admin_item_path,  method: :patch, local:true do |f| %>
            <div class="form-group">  
              <label for="item_image">商品画像</label>
                <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
            </div>
            <div class="form-group"> 
              <label for="item_name">商品名</label> 
                <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
            </div>
            <div class="form-group">
              <label for="item_introduction">商品説明</label>
                <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>  
            </div>
            <div class="form-group">    
              <label for="item_price">税抜価格</label>
                <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank:"選択して下さい" %>
             </div>
            <div class="form-group">
               <label for="item_genre">ジャンル</label>
                <%= f.text_field:price, placeholder:"1000" %>
            </div>    
            <div class="form-group">
              <label for="item_is_active">販売ステータス</label>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中", { style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :false%>
                <%= f.label :is_active, "販売停止中", { style: "display: inline-block;"} %>
            </div>
            <div class="form-group">  
                <%= f.submit '変更を保存' %>
            </div>
          <% end %>
      </div>
    </div>       
  </div>        
</main>