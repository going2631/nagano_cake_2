<h1>商品編集</h1>

        <h1>会員ID</h1>
        <%= @customer.id%>

    <%= form_with model: @customer, url: admin_customers_path,  method: :patch, local:true do |f| %>
        
        <h4>氏名</h4> 
          <%= f.text_field :last_name, autofocus: true, id:"inputLastName", placeholder:"LastName"%>
          <%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"FirstName"%>
        <h4>フリガナ</h4>
          <%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana", placeholder:"LastNameKana"%>
          <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder:"FirstNameKana"%>
        <h4>郵便番号</h4>
          <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"PostalCode"%>
        <h4>住所</h4>
        　 <%= f.text_area :address, autofocus: true, id:"inputAddress", placeholder:"Address"%>
        <h4>電話番号</h4>
          <%= f.text_field :telephone_number autofocus: true, id:"inputTelephoneNumber", placeholder:"TelephoneNumber"%>
        <h4>メールアドレス</h4>
          <%= f.text_field :email autofocus: true, id:"inputEmail", placeholder:"Email"%>  
       <h4>販売ステータス</h4>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", { style: "display: inline-block;"} %>
          <%= f.radio_button :is_deleted, : %>
          <%= f.label :is_deleted, "退会", { style: "display: inline-block;"} %>
       
          <%= f.submit '変更を保存' %>
        <% end %>